<form action="/login" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input name="Email" type="email" value="@Model.Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <div class="error">@Html.ValidationMessageFor(item => item.Email)</div>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group mt-3">
        <label for="exampleInputPassword1">Password</label>
        <input name="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <div class="error">@Html.ValidationMessageFor(item => item.Password)</div>
    </div>
      <div class="form-group form-check mt-3">
        <input name="RememberMe" type="checkbox" class="form-check-input" id="exampleCheck1" value="true">
        <label class="form-check-label" for="exampleCheck1">Remember Me</label>
      </div>
    <button class="button mt-3">Log In</button>
</form>
